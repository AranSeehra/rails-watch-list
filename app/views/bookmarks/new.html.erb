<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1>Add a new Bookmark!</h1>
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :comment %>
          <%= f.association :movie %>
          <%= f.submit %>
          <%= link_to "Back to List", list_path(@list) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
